{
  "name": "sheep-music",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "license": "MIT",
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "format": "prettier --write \"src/**/*.ts\"",
    "start": "ts-node -r tsconfig-paths/register src/main.ts",
    "start:dev": "nodemon",
    "start:debug": "nodemon --config nodemon-debug.json",
    "prestart:prod": "rimraf dist && yarn run build",
    "start:prod": "node dist/main.js",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "test": "jest --detectOpenHandles",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "typeorm": "ts-node -r tsconfig-paths/register ./src/database/init-ormconfig.ts && ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js",
    "ormconfig:init": "ts-node -r tsconfig-paths/register ./src/database/init-ormconfig.ts",
    "migration:generate": "yarn ormconfig:init && yarn typeorm migration:generate -n",
    "migration:create": "yarn ormconfig:init && yarn typeorm migration:create -n",
    "migration:run": "yarn ormconfig:init && yarn typeorm migration:run",
    "schema:drop": "yarn ormconfig:init && yarn typeorm schema:drop",
    "migration:revert": "yarn ormconfig:init && yarn typeorm migration:revert", 
    "seed:create": "yarn ormconfig:init &&  yarn typeorm migration:create -c seed -n ",
    "seed:run": "yarn ormconfig:init && yarn typeorm migration:run -c seed",
    "seed:revert": "yarn ormconfig:init && yarn typeorm migration:revert -c seed"
  },
  "dependencies": {
    "@nest-modules/mailer": "^1.1.3",
    "@nestjs/common": "^6.0.0",
    "@nestjs/core": "^6.0.0",
    "@nestjs/jwt": "^6.1.1",
    "@nestjs/passport": "^6.1.0",
    "@nestjs/platform-express": "^6.3.1",
    "@nestjs/platform-socket.io": "^6.3.2",
    "@nestjs/typeorm": "^6.1.1",
    "@nestjs/websockets": "^6.3.2",
    "@types/socket.io": "^2.1.2",
    "aws-sdk": "^2.469.0",
    "bcryptjs": "^2.4.3",
    "class-transformer": "^0.2.3",
    "class-validator": "^0.9.1",
    "dotenv": "^8.0.0",
    "moment": "^2.24.0",
    "nestjs-config": "^1.4.2",
    "passport": "^0.4.0",
    "passport-jwt": "^4.0.0",
    "pg": "^7.11.0",
    "reflect-metadata": "^0.1.12",
    "rimraf": "^2.6.2",
    "rxjs": "^6.5.2",
    "transliteration": "^2.1.4",
    "typeorm": "^0.2.17"
  },
  "devDependencies": {
    "@nestjs/testing": "^6.0.0",
    "@types/express": "^4.16.0",
    "@types/jest": "^23.3.13",
    "@types/node": "^10.12.18",
    "@types/supertest": "^2.0.7",
    "jest": "^23.6.0",
    "nodemon": "^1.18.9",
    "prettier": "^1.15.3",
    "supertest": "^3.4.1",
    "ts-jest": "^23.10.5",
    "ts-node": "^7.0.1",
    "tsconfig-paths": "^3.7.0",
    "tslint": "5.12.1",
    "typescript": "^3.2.4"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
